
<% layout("layouts/boilerplates") %>
<div id = "map", style = "width: 100%; height: 500px">

</div>
<div class = "row my-5">
    <h1 class = "col-4 offset-4">Campgrounds</h1>
    <div class = "col-4">
        <a class = "btn btn-info", href = "/campgrounds/new">Add a New Campground</a>
    </div>
</div>
<% for (let c of campgrounds) { %>
    <div class = "card mb-3" >
        <div class = "row">
            <div class = "col-md-4">
                <%if(c.images.length) {%>
                <img class = "img-fluid", src = "<%= c.images[0].url %>">
                <% }else { %>
                    <img class="img-fluid" 
                        src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class = "col-md-4">
                <div class = "card-body">
                    <h5 class = "card-title"><%=c.title%></h5>
                    <p class = "card-text"><%=c.location%></p>
                </div>
            </div>
            <div class = "col-md-4">
                <div class = "card-body">
                    <a class = "btn btn-primary", href = "/campgrounds/<%= c._id%>">View the Campground</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds ={ features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src = "/javascripts/clusterMap.js"></script>

